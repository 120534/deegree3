<deegreeWFS xmlns="http://www.deegree.org/services/wfs" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  configVersion="0.6.0" xsi:schemaLocation="http://www.deegree.org/services/wfs http://schemas.deegree.org/wfs/0.6.0/wfs_configuration.xsd">

  <!-- [0...1] Activated OGC protocol versions, default: activate all implemented versions -->
  <SupportedVersions>
    <Version>1.0.0</Version>
    <Version>1.1.0</Version>
  </SupportedVersions>

  <!-- [0...1] Enable transactions (WFS-T operations), default: disabled -->
  <EnableTransactions>true</EnableTransactions>

  <!--
    [0...1] Disable response buffering (allows rollback for generating clean exception reports, but hinders streaming),
    default: true
  -->
  <DisableResponseBuffering>true</DisableResponseBuffering>

  <!-- [0...1] Announced CRS, default: EPSG:4326 -->
  <QueryCRS>EPSG:900913 EPSG:4258 EPSG:4326</QueryCRS>

  <!-- [0...n] Output / input format configuration, default: GML 2.1, 3.0, 3.1, 3.2 -->
  <Format handler="GENERIC_GML">

    <!-- [1] Mime type handled by this configuration -->
    <MimeType>text/xml; subtype=gml/3.2.1</MimeType>

    <!-- [0...1] Root element name for GetFeature response (for handler GENERIC_GML) -->
    <Param name="GET_FEATURE_RESPONSE_LOCAL_NAME">FeatureCollection</Param>

    <!-- [0...1] Root element prefix for GetFeature response (for handler GENERIC_GML) -->
    <Param name="GET_FEATURE_RESPONSE_PREFIX">gml</Param>

    <!-- [0...1] Root element namespace for GetFeature response (for handler GENERIC_GML) -->
    <Param name="GET_FEATURE_RESPONSE_NAMESPACE">http://www.opengis.net/gml/3.2</Param>

    <!-- [0...1] Value to add to xsi:schemaLocation attribute (for handler GENERIC_GML) -->
    <Param name="GET_FEATURE_RESPONSE_XSI_SCHEMA_LOCATION">http://www.opengis.net/gml/3.2 http://schemas.opengis.net/gml/3.2.1/deprecatedTypes.xsd</Param>

    <!--
      [0...1] Allows to disable output streaming (positive effect: numberOfFeature attribute / gml:boundedBy will be
      included in GetFeature responses)
    -->
    <Param name="DISABLE_STREAMING">false</Param>

  </Format>

</deegreeWFS>