<?xml version="1.0"?>
<RemoteWMSTileStore xmlns="http://www.deegree.org/datasource/tile/remotewms" xmlns:md="http://www.deegree.org/metadata/spatial"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.deegree.org/datasource/tile/remotewms http://schemas.deegree.org/datasource/tile/remotewms/3.2.0/remotewms.xsd"
  configVersion="3.2.0">

  <TileMatrixSet>

    <!-- [1]: Id of the remote OWS to connect to (must be a WMS instance) -->
    <RemoteWMSId>utah-wms</RemoteWMSId>

    <!-- [1]: CRS for querying the remote service as well as the resulting tiles -->
    <md:CRS>EPSG:26912</md:CRS>

    <!-- [1]: WMS request parameters -->
    <RequestParams>
      <!-- [1] Comma-separated list of layer names -->
      <Layers>CountyBoundaries,CountyNames</Layers>
      <!-- [0..1] Comma-separated list of styles -->
      <Styles>default,default</Styles>
      <!-- [1] Image format -->
      <Format>image/png</Format>
    </RequestParams>

    <!-- [1]: Geometry of the tile pyramid -->
    <TilePyramid>
      <Identifier>tiles26912</Identifier>
      <!-- [1]: Width of a single tile in pixels -->
      <TileWidth>256</TileWidth>
      <!-- [1]: Height of a single tile in pixels -->
      <TileHeight>256</TileHeight>
      <!-- [1]: First scale level (base of the pyramid), scales of other levels are generated by subsequent division by two -->
      <MinScaleDenominator>1000</MinScaleDenominator>
      <!-- [1]: Number of scale levels -->
      <NumLevels>10</NumLevels>
    </TilePyramid>
  </TileMatrixSet>
</RemoteWMSTileStore>
