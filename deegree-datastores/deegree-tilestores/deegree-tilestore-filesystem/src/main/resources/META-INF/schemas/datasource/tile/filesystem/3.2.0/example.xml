<?xml version="1.0"?>
<FileSystemTileStore xmlns="http://www.deegree.org/datasource/tile/filesystem" xmlns:md="http://www.deegree.org/metadata/spatial"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.deegree.org/datasource/tile/filesystem filesystem.xsd"
  configVersion="3.2.0">

  <!-- [1]: CRS of the tiles -->
  <md:CRS>EPSG:31466</md:CRS>

  <!-- [1]: Envelope of the tiled area -->
  <md:Envelope>
    <md:LowerCorner>0 0</md:LowerCorner>
    <md:UpperCorner>47 11</md:UpperCorner>
  </md:Envelope>  

  <!-- [1]: Geometry of the tile pyramid -->
  <TilePyramid>
    <!-- [1]: Width of a single tile in pixels -->
    <TileWidth>256</TileWidth>
    <!-- [1]: Height of a single tile in pixels -->
    <TileHeight>256</TileHeight>
    <!-- [1]: First scale level (base of the pyramid), scales of other levels are generated by subsequent division by two -->
    <MinScaleDenominator>1000</MinScaleDenominator>
    <!-- [1]: Number of scale levels -->
    <NumLevels>10</NumLevels>
  </TilePyramid>

  <TileCacheDiskLayout>
    <Directory>../../data/tiles/layer1</Directory>
    <FileType>png</FileType>
  </TileCacheDiskLayout>

</FileSystemTileStore>