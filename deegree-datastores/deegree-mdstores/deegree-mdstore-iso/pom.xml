<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>deegree-mdstore-iso</artifactId>
  <packaging>jar</packaging>
  <name>deegree-mdstore-iso</name>

  <parent>
    <groupId>org.deegree</groupId>
    <artifactId>deegree-mdstores</artifactId>
    <version>3.1-pre12-SNAPSHOT</version>
  </parent>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxb2-maven-plugin</artifactId>
        <version>1.3</version>
        <executions>
          <execution>
            <goals>
              <goal>xjc</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <schemaFiles>datasource/metadata/iso19115/3.0.0/iso19115.xsd</schemaFiles>
          <schemaDirectory>src/main/resources/META-INF/schemas/</schemaDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-mdstore-commons</artifactId>
      <version>3.1-pre12-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-sqldialect-postgis</artifactId>
      <version>3.1-pre12-SNAPSHOT</version>
    </dependency>
  </dependencies>
</project>
