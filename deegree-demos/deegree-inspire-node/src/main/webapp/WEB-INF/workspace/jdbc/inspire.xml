<PooledConnection xmlns="http://www.deegree.org/jdbc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" configVersion="0.5.0" xsi:schemaLocation="http://www.deegree.org/jdbc http://schemas.deegree.org/jdbc/0.5.0/jdbc.xsd">

  <!-- [1] JDBC URL (without username / password) -->
  <Url>jdbc:postgresql://localhost:5432/inspire</Url>

  <!-- [1] DB username -->
  <User>postgres</User>

  <!-- [1] DB password -->
  <Password>postgres</Password>

  <!-- [1] Minimum number of pooled connections -->
  <PoolMinSize>5</PoolMinSize>

  <!-- [1] Maximum number of pooled connections -->
  <PoolMaxSize>20</PoolMaxSize>

</PooledConnection>