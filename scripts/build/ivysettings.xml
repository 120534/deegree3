<?xml version="1.0" encoding="UTF-8"?>
<ivysettings>
  <settings defaultResolver="deegree" />
  <credentials host="${publication.host}" realm="${publication.realm}" username="${publication.username}"
    passwd="${publication.password}" />
  <resolvers>
    <chain name="deegree" returnFirst="true">
      <!-- 1. lookup deegree modules in local ivy repository (by default located in ${user.home}/.ivy2/local/ -->
      <filesystem name="local-publisher" checksums="md5">
        <artifact pattern="${ivy.local.repository.dir}/[organisation]/[module]/[artifact].[ext]" />
        <ivy pattern="${ivy.local.repository.dir}/[organisation]/[module]/[module]-[revision].ivy" />
      </filesystem>
      <!-- 2. lookup deegree modules in deegree repository -->
      <url name="libs-snapshot" m2compatible="true">
        <artifact pattern="${ivy.repository.libs-snapshots}/[organisation]/[module]/[revision]/[artifact].[ext]" />
        <ivy pattern="${ivy.repository.libs-snapshots}/[organisation]/[module]/[revision]/[module]-[revision].ivy" />
      </url>
      <!-- 3. lookup external libraries in deegree repository -->
      <ibiblio name="remote-repos" m2compatible="true" root="${ivy.repository.remote-repos}" />
      <!-- 4. lookup external libraries (unreleased) in deegree repository -->
      <ibiblio name="ext-releases" m2compatible="true" root="${ivy.repository.ext-releases}" />
    </chain>
    <url name="publish-snapshot" m2compatible="true" checksums="md5">
      <artifact pattern="${ivy.publish.snapshot}/[organisation]/[module]/[revision]/[artifact].[ext]" />
      <ivy pattern="${ivy.publish.snapshot}/[organisation]/[module]/[revision]/[artifact]" />
    </url>
  </resolvers>
  <!--
    NOTE: Do not disable the copying of local artifacts (i.e. from local-publisher) to the ivy cache. This will break
    the identifying of updated snapshots of dependent deegree modules.
  -->
  <!-- caches useOrigin="true" /-->
</ivysettings>
