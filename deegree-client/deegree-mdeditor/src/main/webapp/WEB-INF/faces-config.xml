<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

    <application>
        <locale-config>
            <default-locale>de</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <message-bundle>org.deegree.client.mdeditor.messages.messages</message-bundle>
        <resource-bundle>
            <base-name>org.deegree.client.mdeditor.messages.labels</base-name>
            <var>mdLabels</var>
        </resource-bundle>
    </application>

    <managed-bean>
        <managed-bean-name>helpBean</managed-bean-name>
        <managed-bean-class>org.deegree.client.mdeditor.gui.HelpBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>navigationBean</managed-bean-name>
        <managed-bean-class>org.deegree.client.mdeditor.gui.NavigationBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>


    <managed-bean>
        <managed-bean-name>formFieldBean</managed-bean-name>
        <managed-bean-class>org.deegree.client.mdeditor.gui.FormFieldBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>formCreatorBean</managed-bean-name>
        <managed-bean-class>org.deegree.client.mdeditor.gui.FormCreatorBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>menuCreatorBean</managed-bean-name>
        <managed-bean-class>org.deegree.client.mdeditor.gui.MenuCreatorBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>generateIdBean</managed-bean-name>
        <managed-bean-class>org.deegree.client.mdeditor.gui.elements.GenerateIdBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>datasetBean</managed-bean-name>
        <managed-bean-class>org.deegree.client.mdeditor.gui.DatasetBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>dataGroupBean</managed-bean-name>
        <managed-bean-class>org.deegree.client.mdeditor.gui.DataGroupBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    
    <managed-bean>
        <managed-bean-name>exportBean</managed-bean-name>
        <managed-bean-class>org.deegree.client.mdeditor.gui.ExportBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <render-kit>
        <renderer>
            <component-family>javax.faces.Panel</component-family>
            <renderer-type>org.deegree.ListGroupRenderer</renderer-type>
            <renderer-class>org.deegree.client.mdeditor.gui.components.ListGroupRenderer</renderer-class>
        </renderer>
    </render-kit>
    <render-kit>
        <renderer>
            <component-family>javax.faces.Input</component-family>
            <renderer-type>org.deegree.HtmlInputManyTextRenderer</renderer-type>
            <renderer-class>org.deegree.client.mdeditor.gui.components.HtmlInputManyTextRenderer</renderer-class>
        </renderer>
    </render-kit>
    <render-kit>
        <renderer>
            <component-family>javax.faces.Input</component-family>
            <renderer-type>org.deegree.HtmlInputTextItemsRenderer</renderer-type>
            <renderer-class>org.deegree.client.mdeditor.gui.components.HtmlInputTextItemsRenderer</renderer-class>
        </renderer>
    </render-kit>

    <component>
        <component-type>org.deegree.ListGroup</component-type>
        <component-class>org.deegree.client.mdeditor.gui.components.ListGroup</component-class>
    </component>

    <component>
        <component-type>org.deegree.HtmlInputManyText</component-type>
        <component-class>org.deegree.client.mdeditor.gui.components.HtmlInputManyText</component-class>
    </component>
    <component>
        <component-type>org.deegree.HtmlInputTextItems</component-type>
        <component-class>org.deegree.client.mdeditor.gui.components.HtmlInputTextItems</component-class>
    </component>
    
    <!-- PhaseListener -->
    <lifecycle>
        <phase-listener>org.deegree.client.debug.DebugPhaseListener</phase-listener>
        <phase-listener>org.deegree.client.debug.ParameterPhaseListener</phase-listener>
    </lifecycle>

    <factory>
        <exception-handler-factory>org.deegree.client.mdeditor.ExceptionHandlerFactory</exception-handler-factory>
    </factory>

</faces-config>