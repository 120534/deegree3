<?xml version="1.0" encoding="UTF-8"?>
<deegreeWMS configVersion="0.5.0" xmlns="http://www.deegree.org/services/wms" xmlns:xlink="http://www.w3.org/1999/xlink"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dgws="http://www.deegree.org/webservices"
  xsi:schemaLocation="http://www.deegree.org/services/wms http://schemas.deegree.org/wms/0.5.0/wms_configuration.xsd">

  <ServiceConfiguration>

    <RequestableLayer>
      <Name>root</Name>
      <Title>My Root Layer</Title>
      <CRS>EPSG:4326</CRS>

      <RequestableLayer>
        <Name>cite:BasicPolygons</Name>
        <Title>cite:BasicPolygons</Title>
        <FeatureStoreId>basicpolygons</FeatureStoreId>
        <DirectStyle>
          <File>../styles/BasicPolygons.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:Forests</Name>
        <Title>cite:Forests</Title>
        <FeatureStoreId>forests</FeatureStoreId>
        <DirectStyle>
          <File>../styles/Forests.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:Lakes</Name>
        <Title>cite:Lakes</Title>
        <Dimension isElevation="true">
          <Property>ELEV</Property>
          <DefaultValue>500</DefaultValue>
          <NearestValue>true</NearestValue>
          <Extent>500,490,480</Extent>
        </Dimension>
        <FeatureStoreId>lakes</FeatureStoreId>
        <DirectStyle>
          <File>../styles/Lakes.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:Ponds</Name>
        <Title>cite:Ponds</Title>
        <FeatureStoreId>ponds</FeatureStoreId>
        <DirectStyle>
          <File>../styles/Ponds.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:NamedPlaces</Name>
        <Title>cite:NamedPlaces</Title>
        <FeatureStoreId>namedplaces</FeatureStoreId>
        <DirectStyle>
          <File>../styles/NamedPlaces.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:Buildings</Name>
        <Title>cite:Buildings</Title>
        <FeatureStoreId>buildings</FeatureStoreId>
        <DirectStyle>
          <File>../styles/Buildings.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:BuildingCenters</Name>
        <Title>cite:BuildingCenters</Title>
        <FeatureStoreId>buildingcenters</FeatureStoreId>
        <DirectStyle>
          <File>../styles/BuildingCenters.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:DividedRoutes</Name>
        <Title>cite:DividedRoutes</Title>
        <FeatureStoreId>dividedroutes</FeatureStoreId>
        <DirectStyle>
          <File>../styles/DividedRoutes.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:RoadSegments</Name>
        <Title>cite:RoadSegments</Title>
        <FeatureStoreId>roadsegments</FeatureStoreId>
        <DirectStyle>
          <File>../styles/RoadSegments.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:MapNeatline</Name>
        <Title>cite:MapNeatline</Title>
        <FeatureStoreId>mapneatline</FeatureStoreId>
        <DirectStyle>
          <File>../styles/MapNeatline.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:Streams</Name>
        <Title>cite:Streams</Title>
        <FeatureStoreId>streams</FeatureStoreId>
        <DirectStyle>
          <File>../styles/Streams.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:Bridges</Name>
        <Title>cite:Bridges</Title>
        <FeatureStoreId>bridges</FeatureStoreId>
        <DirectStyle>
          <File>../styles/Bridges.xml</File>
        </DirectStyle>
      </RequestableLayer>

      <RequestableLayer>
        <Name>cite:Autos</Name>
        <Title>cite:Autos</Title>
        <Dimension isTime="true">
          <Property>TIME</Property>
          <MultipleValues>true</MultipleValues>
          <NearestValue>true</NearestValue>
          <Current>true</Current>
          <Extent>2000-01-01T00:00:00Z/2000-01-01T00:01:00Z/PT5S</Extent>
        </Dimension>
        <FeatureStoreId>autos</FeatureStoreId>
        <DirectStyle>
          <File>../styles/Autos.xml</File>
        </DirectStyle>
      </RequestableLayer>

    </RequestableLayer>

  </ServiceConfiguration>

  <PublishedInformation>
    <SupportedVersions>
      <Version>1.1.1</Version>
    </SupportedVersions>
  </PublishedInformation>

</deegreeWMS>
