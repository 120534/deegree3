<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.deegree</groupId>
  <artifactId>deegree</artifactId>
  <packaging>pom</packaging>
  <version>3.2-pre5-SNAPSHOT</version>
  <name>deegree</name>
  <description>Framework for OGC Web Service implementations and geospatial applications</description>
  <url>http://www.deegree.org</url>

  <scm>
    <connection>scm:svn:http://svn.wald.intevation.org/svn/deegree/deegree3/trunk</connection>
    <developerConnection>scm:svn:svn+ssh://svn.wald.intevation.org/deegree/deegree3/trunk</developerConnection>
    <url>http://svn.wald.intevation.org/svn/deegree/deegree3/trunk</url>
  </scm>

  <repositories>
    <repository>
      <id>deegree-repo</id>
      <url>http://artefacts.deegree.org/repo</url>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <distributionManagement>
    <repository>
      <id>deegree-releases</id>
      <url>http://artefacts.deegree.org/libs-releases-local</url>
    </repository>
    <snapshotRepository>
      <id>deegree-snapshots</id>
      <url>http://artefacts.deegree.org/libs-snapshots-local</url>
    </snapshotRepository>
  </distributionManagement>

  <pluginRepositories>
    <pluginRepository>
      <id>deegree-plugin-repo</id>
      <url>http://artefacts.deegree.org/repo</url>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
      </resource>
      <resource>
        <directory>src/main/filtered</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.jvnet.jaxb2.maven2</groupId>
          <artifactId>maven-jaxb2-plugin</artifactId>
          <version>0.8.0</version>
          <executions>
            <execution>
              <goals>
                <goal>generate</goal>
              </goals>
              <configuration>
                <schemaIncludes>
                  <include>**/*xsd</include>
                </schemaIncludes>
                <schemaDirectory>src/main/resources/META-INF/schemas/</schemaDirectory>
                <episode>true</episode>
                <catalog>target/deegree.xmlcatalog</catalog>
                <catalogResolver>org.jvnet.jaxb2.maven2.resolver.tools.ClasspathCatalogResolver</catalogResolver>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.deegree</groupId>
          <artifactId>deegree-maven-plugin</artifactId>
          <version>1.11</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.1</version>
        <configuration>
          <preparationGoals>clean install</preparationGoals>
          <tagBase>svn+ssh://svn.wald.intevation.org/deegree/deegree3/tags</tagBase>
          <autoVersionSubmodules>true</autoVersionSubmodules>
          <arguments>-e</arguments>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
          <encoding>UTF-8</encoding>
          <compilerArgument>-Alog4j.outputdir=${project.basedir}/target/classes/META-INF/deegree/log4j/</compilerArgument>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.4.3</version>
        <configuration>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>buildnumber-maven-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <phase>validate</phase>
            <goals>
              <goal>create</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <revisionOnScmFailure>${buildTimestamp}</revisionOnScmFailure>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.deegree</groupId>
        <artifactId>deegree-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>buildinfo</id>
            <goals>
              <goal>generate-buildinfo</goal>
            </goals>
          </execution>
          <execution>
            <id>jaxbcatalog</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate-jaxb-catalog</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <version>1.5</version>
        <configuration>
          <goals>install</goals>
        </configuration>
      </plugin>
    </plugins>
  </build>


  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.8.1</version>
      </dependency>
      <dependency>
        <groupId>org.mockito</groupId>
        <artifactId>mockito-core</artifactId>
        <version>1.9.0</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <buildTimestamp>${maven.build.timestamp}</buildTimestamp>
  </properties>

  <modules>
    <module>deegree-client</module>
    <module>deegree-core</module>
    <module>deegree-datastores</module>
    <module>deegree-layers</module>
    <module>deegree-misc</module>
    <module>deegree-processproviders</module>
    <module>deegree-services</module>
    <module>deegree-themes</module>
    <module>deegree-tools</module>
    <module>deegree-workspaces</module>
  </modules>

  <profiles>
    <profile>
      <id>integration-tests</id>
      <modules>
        <module>deegree-tests</module>
      </modules>
    </profile>
    <profile>
      <id>site</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-site-plugin</artifactId>
            <version>3.0</version>
            <configuration>
              <reportPlugins>
                <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-javadoc-plugin</artifactId>
                  <version>2.8</version>
                  <configuration>
                    <maxmemory>512m</maxmemory>
                  </configuration>
                </plugin>
                <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-project-info-reports-plugin</artifactId>
                  <version>2.4</version>
                  <configuration>
                    <dependencyLocationsEnabled>false</dependencyLocationsEnabled>
                  </configuration>
                </plugin>
              </reportPlugins>
            </configuration>
            <dependencies>
              <dependency>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>1.0</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
      <distributionManagement>
        <repository>
          <id>deegree-releases</id>
          <url>http://artefacts.deegree.org/libs-releases-local</url>
        </repository>
        <snapshotRepository>
          <id>deegree-snapshots</id>
          <url>http://artefacts.deegree.org/libs-snapshots-local</url>
        </snapshotRepository>
        <site>
          <id>deegree-website</id>
          <name>deegree 3 Maven Modules Website</name>
          <url>scp://web.lat-lon.de/var/www/apidoc.deegree.org/${project.version}/</url>
        </site>
      </distributionManagement>
    </profile>
  </profiles>

  <licenses>
    <license>
      <name>GNU Lesser General Public License (LGPL), version 2.1</name>
      <url>http://www.gnu.org/licenses/lgpl-2.1.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <issueManagement>
    <system>Trac</system>
    <url>http://tracker.deegree.org/deegree-services/</url>
  </issueManagement>

  <developers>
    <developer>
      <name>Markus Schneider</name>
      <email>schneider@lat-lon.de</email>
    </developer>
    <developer>
      <name>Andreas Schmitz</name>
      <email>schmitz@lat-lon.de</email>
    </developer>
    <developer>
      <name>Lyn Goltz</name>
      <email>buesching@lat-lon.de</email>
    </developer>
  </developers>

  <mailingLists>
    <mailingList>
      <name>deegree users mailing list</name>
      <subscribe>https://lists.sourceforge.net/lists/listinfo/deegree-users</subscribe>
      <unsubscribe>https://lists.sourceforge.net/lists/listinfo/deegree-users</unsubscribe>
      <post>deegree-users@lists.sourceforge.net</post>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum_name=deegree-users</archive>
    </mailingList>
    <mailingList>
      <name>deegree developers mailing list</name>
      <subscribe>https://lists.sourceforge.net/lists/listinfo/deegree-devel</subscribe>
      <unsubscribe>https://lists.sourceforge.net/lists/listinfo/deegree-devel</unsubscribe>
      <post>deegree-devel@lists.sourceforge.net</post>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum_name=deegree-devel</archive>
    </mailingList>
    <mailingList>
      <name>deegree announce mailing list</name>
      <subscribe>https://lists.sourceforge.net/lists/listinfo/deegree-announce</subscribe>
      <unsubscribe>https://lists.sourceforge.net/lists/listinfo/deegree-announce</unsubscribe>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum_name=deegree-announce</archive>
    </mailingList>
  </mailingLists>

</project>
